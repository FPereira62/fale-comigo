[build]
  base = "/"
  publish = "public"
  command = "# no build command needed"

[context.production.environment]
  # Remplacez ces valeurs avec celles de votre projet Firebase :
  # Allez sur Firebase Console > Paramètres du projet > Général > Vos applications
  # Cherchez la section "Configuration SDK" après avoir créé une app web
  FIREBASE_API_KEY = "EXEMPLE-abc123xyz789" # ⚠️ Remplacer avec votre API Key
  FIREBASE_AUTH_DOMAIN = "exemple-app.firebaseapp.com"
  FIREBASE_PROJECT_ID = "exemple-app"
  FIREBASE_STORAGE_BUCKET = "exemple-app.appspot.com"
  FIREBASE_MESSAGING_SENDER_ID = "123456789"
  FIREBASE_APP_ID = "1:123456789:web:abc123xyz789"

[context.deploy-preview.environment]
  # Copier les mêmes valeurs que ci-dessus
  FIREBASE_API_KEY = "EXEMPLE-abc123xyz789"
  FIREBASE_AUTH_DOMAIN = "exemple-app.firebaseapp.com"
  FIREBASE_PROJECT_ID = "exemple-app"
  FIREBASE_STORAGE_BUCKET = "exemple-app.appspot.com"
  FIREBASE_MESSAGING_SENDER_ID = "123456789"
  FIREBASE_APP_ID = "1:123456789:web:abc123xyz789"

# Le reste de la configuration reste identique
[[redirects]]
  from = "/student/*"
  to = "/student/index.html"
  status = 200

[[redirects]]
  from = "/teacher/*"
  to = "/teacher/index.html"
  status = 200

[[redirects]]
  from = "/*"
  to = "/student/index.html"
  status = 200

[[headers]]
  for = "/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-Content-Type-Options = "nosniff"
    Content-Security-Policy = """
      default-src 'self';
      img-src 'self' data:;
      style-src 'self' 'unsafe-inline';
      script-src 'self' 'unsafe-inline' https://*.firebaseapp.com https://www.gstatic.com;
      connect-src 'self' https://*.firebaseio.com https://*.firebaseapp.com;
      frame-src 'self' https://*.firebaseapp.com https://app.netlify.com;
      worker-src 'self' blob:
    """
    Cache-Control = "public, max-age=0, must-revalidate"

[[headers]]
  for = "/*.css"
  [headers.values]
    Content-Type = "text/css; charset=utf-8"
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/*.js"
  [headers.values]
    Content-Type = "application/javascript; charset=utf-8"
    Cache-Control = "public, max-age=31536000, immutable"